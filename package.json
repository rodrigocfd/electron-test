{
	"name": "electron-test",
	"version": "1.0.0",
	"description": "First Electron app.",
	"main": "app/app.js",
	"scripts": {
		"start": "electron .",
		"build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=palmtree.icns --prune=true --out=release",
		"build-win": "electron-packager . electron-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=palmtree.ico --prune=true --out=release --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"CryptoApp\"",
		"build-linux": "electron-packager . electron-app --overwrite --asar=true --platform=linux --arch=x64 --icon=palmtree.png --prune=true --out=release",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"devDependencies": {
		"electron": "^4.0.0",
		"electron-packager": "^13.0.1"
	},
	"dependencies": {
		"electron-is-dev": "^1.0.1",
		"electron-reload": "^1.4.0"
	}
}
